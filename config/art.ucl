      privateer:           { y: 0, x: 1 }
      free_colonist:       { y: 1, x: 0 }
      soldier:             { y: 1, x: 1 }
    }
  }

  menu {
    img: assets/art/tiles/menu.png
    coords {
      menu_top_left:       { y: 0, x: 0 }
      menu_body:           { y: 0, x: 1 }
      menu_top:            { y: 0, x: 2 }
      menu_left:           { y: 0, x: 3 }
      menu_bottom:         { y: 0, x: 4 }
      menu_bottom_left:    { y: 0, x: 5 }
      menu_right:          { y: 0, x: 6 }
      menu_top_right:      { y: 0, x: 7 }
      menu_bottom_right:   { y: 1, x: 0 }
      menu_sel_body:       { y: 1, x: 2 }
      menu_sel_left:       { y: 1, x: 3 }
      menu_sel_right:      { y: 1, x: 4 }
    }
  }

  menu16 {
    img: assets/art/tiles/menu16.png
    coords {
      menu_bar_0: { y: 0, x: 0 }
      menu_bar_1: { y: 0, x: 1 }
