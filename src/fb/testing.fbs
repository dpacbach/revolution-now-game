// For unit testing.

namespace fb;

enum e_color:byte {
  Red,
  Green,
  Blue
}

table Weapon {
  name   : string;
  damage : short;
}

struct Vec2 {
  x : float;
  y : float;
}

struct Vec3 {
  x : float;
  y : float;
  z : float;
}

table Pair_string_int {
  key   : string;
  value : int;
}

struct Pair_Vec2_int {
  key   : Vec2;
  value : int;
}

table Monster {
  pos       : Vec3;
  mana      : short = 150;
  hp        : short = 100;
  name      : string;
  names     : [string];
  friendly  : bool = false (deprecated);
  inventory : [ubyte];
  color     : e_color = Blue;
  weapons   : [Weapon];
  path      : [Vec3];
  map_vecs  : [Pair_Vec2_int];
  map_strs  : [Pair_string_int];
}
