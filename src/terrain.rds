namespace "rn"

enum.e_surface {
  water,
  land
}

enum.e_terrain {
  # Water only has one terrain type.
  ocean,

  # Ground types.
  arctic,
  desert,
  grassland,
  hills,
  marsh,
  mountains,
  plains,
  prairie,
  savannah,
  swamp,
  tundra,

  # Forest types. Each of these, when cleared, map to one of the
  # above base types.
  boreal,
  broadleaf,
  conifer,
  mixed,
  rain,
  scrub,
  tropical,
  wetland,
}

enum.e_river {
  minor,
  major,
}

enum.e_natural_resource {
  beaver,
  cotton,
  deer,
  fish,
  minerals,
  oasis,
  ore,
  silver,
  sugar,
  tobacco,
  tree,
  wheat,
}

# This describes what happens to a terrain type when the play ap-
# plies the "plow" action with a pioneer.
sumtype.PlowAction {
  # Cannot be subject to the plow action.
  none {},

  # Clears a forest and changes terrain type.
  cleared {
    to 'e_terrain',
  },

  # Adds irrigation.
  irrigates {},
}
