  'sugar', --
  'tobacco', --
  'cotton', --
  'fur', --
  'lumber', --
  'ore', --
  'silver', --
  'horses', --
  'rum', --
  'cigars', --
  'cloth', --
  'coats', --
  'trade_goods', --
  'tools', --
  'muskets' --
