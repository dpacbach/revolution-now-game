include'time.hpp'
include'maybe.hpp'

namespace'rn'

MenuItem = sumtype{
  { menu_divider={} },
  {
    menu_clickable={
      { item='e_menu_item' }, --
      { name='std::string' }, --
      { callbacks='MenuCallbacks' }
    }
  },

  [features_key]={}
}

MenuState = sumtype{
  { menus_hidden={} }, {
    menus_closed={ --
      { hover='maybe<e_menu>' }
    }
  }, {
    menu_open={
      { menu='e_menu' }, --
      { hover='maybe<e_menu_item>' }
    }
  }, {
    item_click={
      { item='e_menu_item' }, --
      { start='Time_t' }
    }
  }
}

MouseOver = sumtype{
  {
    header={ --
      { menu='e_menu' }
    }
  }, {
    item={ --
      { item='e_menu_item' }
    }
  }, {
    divider={ --
      { menu='e_menu' }
    }
  }, {
    border={ --
      { menu='e_menu' }
    }
  }, --
  { bar={} }
}
