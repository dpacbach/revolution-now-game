include [
  # Revolution Now
  time.hpp
  maybe.hpp

  # Rds
  menu.rds.hpp

  # C++ standard library
  <functional>
  <string>
]

namespace rn {

sumtype MenuItem {
  menu_divider {}
  menu_clickable {
    item: e_menu_item
    name: 'std::string'
    callbacks: MenuCallbacks
  }

  _features []
}

sumtype MenuState {
  menus_hidden {}
  menus_closed {
    hover: 'maybe<e_menu>'
  }
  menu_open {
    menu: e_menu
    hover: 'maybe<e_menu_item>'
  }
  item_click {
    item: e_menu_item
    start: Time_t
  }
}

sumtype MouseOver {
  header {
    menu: e_menu
  }
  item {
    item: e_menu_item
  }
  divider {
    menu: e_menu
  }
  border {
    menu: e_menu
  }
  bar {}
}

} # namespace rn
