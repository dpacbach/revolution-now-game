include [
  # Revolution Now
  colony-id.hpp
  coord.hpp
  unit-id.hpp
  unit.hpp

  # Rds
  ustate.rds.hpp

  # C++ standard library
  <unordered_map>
]

namespace rn {

sumtype UnitOwnership {
  free {}
  world {
    coord: Coord
  }
  cargo {
    holder: UnitId
  }
  old_world {
    st: UnitOldWorldViewState_t
  }
  colony {
    id: ColonyId
  }
}

struct UnitState {
  unit:      Unit
  ownership: UnitOwnership_t
}

namespace wrapped {

struct UnitsState {
  next_unit_id:  int
  units:        'std::unordered_map<UnitId, UnitState>'

  _features: [equality, validation]
}

} # wrapped

} # namespace rn
